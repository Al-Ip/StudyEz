<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.project.studyez">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.google.android.apps.photos.contentprovider.impl.MediaContentProvider" />

    <application
        tools:replace="android:allowBackup"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyEz">
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/Theme.StudyEz.NoActionBar"
            android:noHistory="false"
            android:launchMode="standard">
        </activity>
        <activity
            android:name=".registration.RegisterActivity"
            android:theme="@style/Theme.StudyEz.NoActionBar"
            android:noHistory="false"
            android:launchMode="standard">
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:theme="@style/Theme.StudyEz.NoActionBar">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
        <activity
            android:name=".splashScreen.SplashScreenActivity"
            android:theme="@style/Theme.StudyEz.NoActionBar"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>